<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.kelas.PesanSekarangFragment">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nama_kel_lanjutan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="1"
        android:text="Hafalan Al Ikhlas"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/cv_image"
        app:layout_constraintTop_toTopOf="@+id/cv_image" />

    <TextView
        android:id="@+id/txt_harga_kelas_lanj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="1"
        android:text="Rp 20.000"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/cv_image"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama_kel_lanjutan" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <ImageView
            android:id="@+id/img_kelas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/orange" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtview11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Segera amankan kelas ini sebelum kuota habis."
        android:textColor="@color/orange"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/cv_image"
        app:layout_constraintTop_toBottomOf="@+id/cv_image" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bergabung"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Pesan Sekarang"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview11"
         />

</androidx.constraintlayout.widget.ConstraintLayout>